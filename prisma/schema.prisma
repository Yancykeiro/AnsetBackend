generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" 
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

// ============================================================================
// 用户表
// ============================================================================
model User {
  id        String   @id @default(cuid())
  openId    String   @unique
  nickName  String?
  avatarUrl String?
  phone     String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  reports   Report[]
  sessions  UploadSession[]
}

// ============================================================================
// 上传会话表
// ============================================================================
model UploadSession {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  roomType    String
  budgetRange String
  
  status      String   @default("uploading")
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  images      TempImage[]
}

// ============================================================================
// 临时图片表
// ============================================================================
model TempImage {
  id        String   @id @default(cuid())
  sessionId String
  session   UploadSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  
  url       String
  type      String
  order     Int
  
  filename  String
  fileSize  Int
  
  createdAt DateTime @default(now())
}

// ============================================================================
// 报告表
// ============================================================================
model Report {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  roomType    String
  budgetRange String
  
  hasSurvey   Boolean  @default(false)
  surveyData  Json?    // PostgreSQL 支持 Json 类型
  
  status      String   @default("analyzing")
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  images      Image[]
  analysis    Analysis?
}

// ============================================================================
// 图片表
// ============================================================================
model Image {
  id        String   @id @default(cuid())
  reportId  String
  report    Report   @relation(fields: [reportId], references: [id], onDelete: Cascade)
  
  url       String
  type      String
  order     Int
  
  filename  String
  fileSize  Int
  
  createdAt DateTime @default(now())
  
  analysis  ImageAnalysis?
}

// ============================================================================
// 单张图片分析结果
// ============================================================================
model ImageAnalysis {
  id            String   @id @default(cuid())
  imageId       String   @unique
  image         Image    @relation(fields: [imageId], references: [id], onDelete: Cascade)
  
  riskTitle     String
  riskAnalysis  String   @db.Text
  renovation    String   @db.Text
  priority      String?
  
  createdAt     DateTime @default(now())
}

// ============================================================================
// 整体分析结果
// ============================================================================
model Analysis {
  id            String   @id @default(cuid())
  reportId      String   @unique
  report        Report   @relation(fields: [reportId], references: [id], onDelete: Cascade)
  
  summary       String   @db.Text
  totalCost     String?
  priority      String?
  
  rawResponse   Json?    // PostgreSQL 支持 Json 类型
  
  createdAt     DateTime @default(now())
}